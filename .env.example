# AI Trading Platform Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API Key (REQUIRED)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (OPTIONAL)
# Default: SQLite database in current directory
# For PostgreSQL: postgresql://username:password@localhost/database_name
DATABASE_URL=sqlite:///./trading_platform.db

# API Server Configuration (OPTIONAL)
API_HOST=0.0.0.0
API_PORT=8000

# Risk-Free Rate for Portfolio Optimization (OPTIONAL)
# Default: 0.02 (2% annual)
RISK_FREE_RATE=0.02

# Paper Trading Initial Capital (OPTIONAL)
# Default: $100,000
PAPER_TRADING_CAPITAL=100000

# Backtesting Initial Capital (OPTIONAL)
# Default: $100,000
BACKTEST_CAPITAL=100000
