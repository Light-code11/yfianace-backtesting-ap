# AI Trading Platform Environment Variables
# Copy this file to .env and replace all placeholder values.

# Core API keys and server configuration
OPENAI_API_KEY=your_openai_api_key_here
API_AUTH_KEY=your_api_auth_key_here
DATABASE_URL=sqlite:///./trading_platform.db
API_HOST=0.0.0.0
API_PORT=8000
PORT=8000
API_BASE_URL=http://localhost:8000

# Alpaca integration
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Autonomous learning and auto-trading switches
ENABLE_AUTONOMOUS_LEARNING=false
AUTO_TRADING_ENABLED=false
AUTO_GENERATE_STRATEGIES=false
AUTO_DEPRECATE_STRATEGIES=true
USE_ML_VALIDATION=true
USE_REGIME_DETECTION=true

# Autonomous scheduling and evaluation thresholds
STRATEGIES_PER_BATCH=20
TOP_N_STRATEGIES_TO_DEPLOY=3
MIN_SHARPE_FOR_DEPLOYMENT=1.5
MIN_TRADES_FOR_EVALUATION=10
PERFORMANCE_THRESHOLD_SHARPE=0.8
ML_MIN_CONFIDENCE=0.6

# Risk controls
MAX_POSITION_SIZE_PCT=20
MAX_DAILY_LOSS_PCT=5
MAX_PORTFOLIO_POSITIONS=10
